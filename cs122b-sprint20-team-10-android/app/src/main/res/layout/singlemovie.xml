<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SingleMovieActivity" android:scrollbars="vertical">

    <TextView
            android:layout_width="355dp"
            android:layout_height="111dp"
            android:text=""
            android:id="@+id/movieInfo"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="56dp"/>
    <TextView
            android:layout_width="379dp"
            android:layout_height="40dp"
            android:text=""
            android:id="@+id/movieTitle"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <ListView
            android:id="@+id/starlist"
            android:layout_width="377dp"
            android:layout_height="395dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.307" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="137dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="25dp"
            android:layout_marginLeft="14dp" android:layout_marginStart="14dp" android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp" app:layout_constraintVertical_bias="0.235"/>
</android.support.constraint.ConstraintLayout>